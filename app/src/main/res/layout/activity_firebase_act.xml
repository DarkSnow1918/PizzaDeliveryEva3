<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28BA4D"
    tools:context=".Firebase_act">

    <androidx.cardview.widget.CardView
        android:layout_width="353dp"
        android:layout_height="657dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/CvDatos"
            android:layout_width="354dp"
            android:layout_height="176dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="230dp">

            <EditText
                android:id="@+id/EtNombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Ingrese Nombre"
                android:inputType="textPersonName"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/EtDestino"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:hint="Ingrese Destino"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/EtPromo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:ems="10"
                android:hint="Ingrese PromociÃ³n"
                android:inputType="textPersonName" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CvBotones"
            android:layout_width="258dp"
            android:layout_height="132dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="450dp">

            <Button
                android:id="@+id/BtnCliente"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFB300"
                android:onClick="Guardar"
                android:text="GUARDAR CLIENTE"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/BtnListado"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="#5E35B1"
                android:onClick="listado"
                android:text="LISTADO CLIENTES"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/firebase" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>